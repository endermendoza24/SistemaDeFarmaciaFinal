@model SIstemaFarmaciaFinal.Models.PresentacionMedicamento;
@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="width:100%" ;>
    <div class="col-6">
        <h2 class="text-primary">Presentación de medicamentos</h2>
    </div>
    <div class="col-4 text-right">
        <button type="button" onclick="Limpiar()" class="btn btn-info form-control" data-toggle="modal" data-target="#MiModal">Agregar a las formas de presentación</button>
    </div>


</div>

<div class="p-4 border rounded bg-light">
    <table id="TblDatos" class="table table-bordered table-responsive-lg" style="width: 90%">
        <thead class="thead-dark">
            <tr class="table-info">
                <td>Id presentación</td>
                <td>Unidad envasado</td>
                <td>Forma de presentación</td>
                <td>Concnetracion</td>
                <td>Unidad de medida</td>
                <td>Unidades</td>
                <td>Subunidades</td>
                @*<td>Estado</td>*@
                <td>Acciones</td>
            </tr>
        </thead>
    </table>

</div>

