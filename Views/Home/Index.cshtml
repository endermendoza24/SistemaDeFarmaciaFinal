@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido al sistema de farmacia</h1>
    <h2 class="display-4">Aquí encontrará todo lo necesario para hacer funcionar su farmacia</h2>
    <br />
    <br />
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/Pharma1.jpg" class="d-block w-100" alt="Imagen de farmacia">
            </div>
            <div class="carousel-item">
                <img src="~/images/Pharma2.jpg" class="d-block w-100" alt="Imagen de farmacia">
            </div>
            <div class="carousel-item">
                <img src="~/images/Pharma3.jpg" class="d-block w-100" alt="Imagen de farmacia">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Anterior</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Siguiente</span>
        </a>
    </div>
</div>
